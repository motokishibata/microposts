  <% if current_user.favorites.find_by(micropost_id: micropost_id) %>
    <%= form_for(current_user.favorites.find_by(micropost_id: micropost_id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost_id %>
      <%= f.submit 'お気に入り解除', class: 'btn btn-danger  btn-xs' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build, html: { method: :post }) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost_id %>
      <%= f.submit 'お気に入り追加', class: 'btn btn-primary btn-xs' %>
    <% end %>
  <% end %>